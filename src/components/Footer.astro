---
import type { languages } from "../i18n/ui";
import { useTranslations } from "../i18n/utils";

const currentLang = Astro.currentLocale || "en";
const t = useTranslations(currentLang as keyof typeof languages)
---

<footer class="bg-[hsl(0,0%,10%)] text-[hsl(0,0%,90%)] py-10">
  <div class="footer-container max-w-7xl mx-auto px-6">
    <div
      class="footer-columns grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mb-8"
    >
      <div class="footer-column">
        <h4 class="font-semibold text-lg mb-4">{t("paraFans")}</h4>
        <ul class="space-y-2">
          <li>
            <a href="#" class="hover:text-[hsl(0,0%,70%)]"
              >{t("buscarEventos")}</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-[hsl(0,0%,70%)]">{t("crearCuenta")}</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-[hsl(0,0%,70%)]">{t("ayuda")}</a>
          </li>
        </ul>
      </div>
      <div class="footer-column">
        <h4 class="font-semibold text-lg mb-4">{t("paraArtistas")}</h4>
        <ul class="space-y-2">
          <li>
            <a href="#" class="hover:text-[hsl(0,0%,70%)]"
              >{t("registrarEvento")}</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-[hsl(0,0%,70%)]"
              >{t("herramientas")}</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-[hsl(0,0%,70%)]">{t("recursos")}</a>
          </li>
        </ul>
      </div>
      <div class="footer-column">
        <h4 class="font-semibold text-lg mb-4">{t("empresa")}</h4>
        <ul class="space-y-2">
          <li>
            <a href="#" class="hover:text-[hsl(0,0%,70%)]"
              >{t("sobreNosotros")}</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-[hsl(0,0%,70%)]">{t("contacto")}</a>
          </li>
          <li>
            <a href="#" class="hover:text-[hsl(0,0%,70%)]">{t("carreras")}</a>
          </li>
        </ul>
      </div>
      <div class="footer-column">
        <h4 class="font-semibold text-lg mb-4">{t("legal")}</h4>
        <ul class="space-y-2">
          <li>
            <a href="#" class="hover:text-[hsl(0,0%,70%)]">{t("privacidad")}</a>
          </li>
          <li>
            <a href="#" class="hover:text-[hsl(0,0%,70%)]">{t("terminos")}</a>
          </li>
          <li>
            <a href="#" class="hover:text-[hsl(0,0%,70%)]">{t("cookies")}</a>
          </li>
        </ul>
      </div>
    </div>
    <div
      class="footer-bottom flex flex-col sm:flex-row items-center justify-between gap-4 border-t border-[hsl(0,0%,20%)] pt-6"
    >
      <p class="text-sm">{t("copyright")}</p>

      <div class="footer-social flex gap-4">
        <a href="https://www.tiktok.com" target="_blank" rel="noreferrer">
          <img
            src="https://img.icons8.com/ios-filled/50/ffffff/tiktok--v1.png"
            alt="TikTok"
            class="h-6 w-6"
          />
        </a>
        <a href="https://twitter.com" target="_blank" rel="noreferrer">
          <img
            src="https://img.icons8.com/ios-filled/50/ffffff/twitterx--v1.png"
            alt="X"
            class="h-6 w-6"
          />
        </a>
        <a href="https://facebook.com" target="_blank" rel="noreferrer">
          <img
            src="https://img.icons8.com/ios-filled/50/ffffff/facebook-new.png"
            alt="Facebook"
            class="h-6 w-6"
          />
        </a>
        <a href="https://youtube.com" target="_blank" rel="noreferrer">
          <img
            src="https://img.icons8.com/ios-filled/50/ffffff/youtube-play.png"
            alt="YouTube"
            class="h-6 w-6"
          />
        </a>
      </div>
    </div>
  </div>
</footer>
